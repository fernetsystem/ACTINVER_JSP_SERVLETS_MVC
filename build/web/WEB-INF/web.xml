<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>registroClienteController</servlet-name>
        <servlet-class>Controllers.registroClienteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registroSucursalController</servlet-name>
        <servlet-class>Controllers.registroSucursalController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listSucursalController</servlet-name>
        <servlet-class>Controllers.listSucursalController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listClientesController</servlet-name>
        <servlet-class>Controllers.listClientesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>fillCuentaFormController</servlet-name>
        <servlet-class>Controllers.fillCuentaFormController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registroCuentaController</servlet-name>
        <servlet-class>Controllers.registroCuentaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listCuentasController</servlet-name>
        <servlet-class>Controllers.listCuentasController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registroClienteController</servlet-name>
        <url-pattern>/registroClienteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registroSucursalController</servlet-name>
        <url-pattern>/registroSucursalController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listSucursalController</servlet-name>
        <url-pattern>/listSucursalController.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listClientesController</servlet-name>
        <url-pattern>/listClientesController.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>fillCuentaFormController</servlet-name>
        <url-pattern>/fillCuentaFormController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registroCuentaController</servlet-name>
        <url-pattern>/registroCuentaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listCuentasController</servlet-name>
        <url-pattern>/listCuentasController.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
